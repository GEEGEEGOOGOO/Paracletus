{
  "name": "adilectus",
  "version": "1.0.0",
  "description": "Adilectus - AI Assistant with Vision",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder build --win --publish never",
    "build:mac": "electron-builder build --mac --publish never",
    "build:linux": "electron-builder build --linux --publish never",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.adilectus.app",
    "productName": "Adilectus",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "server/**/*",
      "node_modules/**/*",
      "!node_modules/.cache"
    ],
    "extraResources": [
      {
        "from": "temp",
        "to": "temp"
      }
    ],
    "asarUnpack": [
      "node_modules/koffi/**/*",
      "node_modules/better-sqlite3/**/*",
      "server/db/interviewbuddy.db"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "ai",
    "interview",
    "electron",
    "speech-recognition",
    "desktop-app"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "cross-env": "^10.1.0",
    "electron": "^39.1.1",
    "electron-builder": "^25.1.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "dependencies": {
    "@deepgram/sdk": "^4.11.2",
    "@google/generative-ai": "^0.21.0",
    "@xenova/transformers": "^2.17.2",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron-is-dev": "^3.0.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "groq-sdk": "^0.34.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "koffi": "^2.14.1",
    "mongoose": "^8.19.3",
    "openai": "^6.8.1",
    "pdf-parse": "^1.1.1",
    "redis": "^4.6.12",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.1",
    "wavefile": "^11.0.0",
    "winston": "^3.18.3",
    "ws": "^8.14.2"
  }
}